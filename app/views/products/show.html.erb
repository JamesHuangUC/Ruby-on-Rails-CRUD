<div class="container">
    <div class="single_product">
        <h3><%= @product.product_name %></h3>
        <% if false %>
          <%= image_tag @product.cover, class: "img-thumbnail rounded mx-auto d-block", alt: "..." %>
        <% end %>
        <img src="<%= @product.cover %>" class="img-thumbnail rounded mx-auto d-block" alt="<%= @product.product_name %>">
        <p class="lead"><%= @product.description %></p>
        <p>Category: <%= @product.category %></p>
        <p>Price: $<%= @product.price %> <%= mail_to @product.contact_email, "Contact #{@product.user.name}", class: "btn btn-primary buy-btn" %></p>

        <% if (logged_in? && current_user.id == @product.user.id) %>
            <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-warning" %>
            <%= link_to 'Remove', product_path(@product), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <% end %>
    </div>
</div>
