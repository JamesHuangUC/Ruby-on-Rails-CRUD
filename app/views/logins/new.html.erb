<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body login-form" style="border-style: none">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>

            <%= form_with url: login_path, local: true do |form| %>
                <div class="form-group">
                    <%= form.label :email, "Email" %><br>
                    <%= form.email_field :email, :class => 'form-control', placeholder: "Enter Email" %>
                </div>

                <div class="form-group">
                    <%= form.label :password, "Password" %><br>
                    <%= form.password_field :password, :class => 'form-control', placeholder: "Enter Password" %>
                </div>

                <%= form.submit "Login", :class => 'btn btn-primary btn-block' %>
            <% end %>

            <p class="lead mt-4">No Account? <%= link_to 'Register', register_path %></p>
        </div>
    </div>
</div>
